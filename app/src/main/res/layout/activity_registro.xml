<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.municipalidadcallao.activity.RegistroActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_reg_txt_usuario"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorRojo" />

            <EditText
                android:id="@+id/txtDni"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_documento"/>

            <EditText
                android:id="@+id/txtNombre"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_nombre"/>

            <EditText
                android:id="@+id/txtApePaterno"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_ape_paterno"/>

            <EditText
                android:id="@+id/txtApeMaterno"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_ape_materno"/>

            <Spinner
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:id="@+id/spDistrito">
            </Spinner>

            <EditText
                android:id="@+id/txtDireccion"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_direccion"/>

            <EditText
                android:id="@+id/txtCorreo"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_correo"/>

            <EditText
                android:id="@+id/txtTelefono"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_reg_telefono"/>

            <EditText
                android:id="@+id/txtClave"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:hint="@string/app_reg_clave"/>

            <Button
                android:id="@+id/btnRegistrarse"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:text="@string/app_btn_regitrarse"
                android:drawableLeft="@drawable/ic_save_black"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btnSalir"
                android:textSize="24dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_menu_reply_black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:text="@string/app_btn_exit"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
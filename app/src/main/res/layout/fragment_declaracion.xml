<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.municipalidadcallao.fragment.DeclaracionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title_declaracion"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorRojo"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/btnDni"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_dni"/>

            <EditText
                android:id="@+id/txtPlaca"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_placa"/>

            <EditText
                android:id="@+id/txtPorcentaje"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_porcentaje"/>

            <EditText
                android:id="@+id/txtImpuesto"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_impuesto"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/btnFecha"
                        android:background="@drawable/ic_date_range_black"/>

                    <EditText
                        android:textSize="24dp"
                        android:id="@+id/etFecha"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:hint="@string/app_declaracion_fecha"/>
                </LinearLayout>

            <EditText
                android:id="@+id/txtAfectoDesde"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_afecto_desde"/>

            <EditText
                android:id="@+id/txtAnioAdquisicion"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_anio_adquicion"/>

            <EditText
                android:id="@+id/txtMoneda"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_moneda"/>

            <EditText
                android:id="@+id/txtValorAdquisicion"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_valor_adquisicion"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:hint="@string/app_declaracion_tipo_cambio"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_val_real_adq"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/app_declaracion_val_mef"/>

            <Button
                android:id="@+id/btnDeclarar"
                android:textSize="24dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_save_black"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:text="@string/app_declaracion_btn"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btnRegresar"
                android:textSize="24dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_menu_reply_black"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:text="@string/app_btn_regresar"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>